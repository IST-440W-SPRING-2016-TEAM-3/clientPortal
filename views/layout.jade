doctype html
html(ng-app='clientportal')
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body(ng-controller='main')
		nav.navbar.navbar-default.navbar-fixed-top
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') IST 440W Group 3
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.pull-right
						li(ng-hide="getLocation() == 'authorized=true'")
							a(href='/login') Login
						li(ng-show="getLocation() == 'authorized=true'")
							a(href='/dashboard') User Dash
						li(ng-hide="getLocation() == 'authorized=true'")
							a(href='/register') Register
						li(ng-show="getLocation() == 'authorized=true'")
							a.btn(href='/logout') Logout
		block content

		script(src='javascripts/jquery.js')
		script(src='javascripts/bootstrap.js')
		script(src='javascripts/angular.js')
		script(src='javascripts/clientportal.js')
