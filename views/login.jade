extends layout

block content
	.container
		.row
			h1 Login
			.panel.panel-default
				.panel-body
					.col-sm-12
						form(action='/login', method='post')
							.form-horizontal
								.form-group
									label User Name
										.input-group
									input.form-control(type='text', placeholder='User Name', required)
								.form-group
									label Password
									.input-group
									input.form-control(type='password', placeholder='Password', required)
								.row.center-text
									button.btn.btn-success.btn-block(type='submit') Sign In
