extends loggedinlayout

block content
	.container.p-t
		.row
			h1 Login
			.panel.panel-default.login
				.panel-body
					.col-sm-12
						form(action='/login', method='post')
							.form-horizontal
								.form-group
									label User Name
									.input-group
									input.form-control(type='text', placeholder='User Name', ng-model='userData.email', name='email', required)
								.form-group
									label Password
									.input-group
									input.form-control(type='password', placeholder='Password', ng-model='userData.pass', name='pass', required)
									.myRow
										button.MYBTN(type='submit') Sign In
