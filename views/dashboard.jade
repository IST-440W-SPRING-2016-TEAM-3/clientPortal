
extends loggedinlayout

block content
	.p-t
	center 
		h1= "Welcome Back, " + userdata.firstname + " " + userdata.lastname + "!"
	.container
		.row
			.col-sm-2
				ul.nav.nav-pills.nav-stacked
					li.active(role='presentation')
						a(data-toggle="tab", href='#profilepage') User Profile
					li(role='presentation')
						a(data-toggle="tab", href='#appointments') Appointments
					li(role='presentation')
						a(data-toggle="tab", href='#medicines') Medicines
					li(role='presentation')
						a(data-toggle="tab", href='#allergies') Allergies
					li(role='presentation')
						a(data-toggle="tab", href='#reports') Reports
			.col-sm-10
				.tab-content
					#profilepage.tab-pane.fade.in.active
						.col-sm-12
							.col-sm-4
								.panel.panel-default.cards
									.panel-heading
										panel-title
											//- img(src="../images/icons/web.svg")
											span.glyphicon.glyphicon-envelope(aria-hidden='true')
									.panel-body
										center
											//- img(src="../images/icons/web.svg")
											p= userdata.email
							.col-sm-4
								.panel.panel-default.cards
									.panel-heading
										panel-title
											span.glyphicon.glyphicon-envelope(aria-hidden='true')
											//- img(src="../images/icons/internet.svg")
									.panel-body
										center
											//p= userdata.address[0].streetaddress 
											//p= userdata.address[0].city + ", " + userdata.address[0].state+ " " + userdata.address[0].zip
							.col-sm-4
								.panel.panel-default.cards
									.panel-heading
										panel-title
											span.glyphicon.glyphicon-envelope(aria-hidden='true')
											//- img(src="../images/icons/phone.svg")
									.panel-body
										center
											p= userdata.phone
					#appointments.tab-pane.fade
						.col-sm-12
							.col-sm-9
								h2 Appointments
							.col-sm-3(class="p-t-b-h")
								a(class="btn btn-440w", ng-click="modalOpen()") Request New Appointment
						.col-sm-12
						table(class="table table-striped")
							thead
								tr 
									th Date
									th Time
									th Doctor
									th Description
							tbody
								tr(ng-repeat='data in userAppointments')
									td {{data.date}}
									td {{data.time}}
									td {{data.doctor}}
									td {{data.description}}
					#medicines.tab-pane.fade
					#allergies.tab-pane.fade
					#reports.tab-pane.fade
