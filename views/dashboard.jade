
extends loggedinlayout

block content
	.p-t
	center 
		h1= "Welcome Back, " + userdata.firstname + " " + userdata.lastname + "!"
	.container
		.row
			.col-sm-2
				ul.nav.nav-pills.nav-stacked
					li.active(role='presentation')
						a(data-toggle="tab", href='#overview') User Overview
					li(role='presentation')
						a(data-toggle="tab", href='#profilepage') User Profile
					li(role='presentation')
						a(data-toggle="tab", href='#results') Test Results
					li(role='presentation')
						a(data-toggle="tab", href='#allergies') Allergies	
					li(role='presentation')
						a(data-toggle="tab", href='#medicines') Medicines
					li(role='presentation')
						a(data-toggle="tab", href='#appointments') Appointments
					li(role='presentation')
						a(data-toggle="tab", href='#reports') Reports

			.col-sm-10
				.tab-content
					#overview.tab-pane.fade.in.active
						.col-sm-12
							.col-sm-4
								profile-cards
							.col-sm-4
								profile-cards
							.col-sm-4
								profile-cards



					#profilepage.tab-pane.fade.in
						profile-cards(route="Overview")
					#appointments.tab-pane.fade
						.col-sm-12
							h2 Appointments
						.col-sm-12
							table(class="table table-striped")
								thead
									tr 
										th Date
										th Time
										th Doctor
										th Description
								tbody
									tr(ng-repeat='data in userAppointments')
										td {{data.date}}
										td {{data.time}}
										td {{data.doctor}}
										td {{data.description}}
						.col-sm-12
							hr
							form
								.form-horizontal
									.form-group
										.col-sm-12.input-group
											label.control-label Date
											input.form-control.datepicker(type='text', ng-model="apptReq.date")
									.form-group
										.col-sm-12.input-group
											label.control-label Time
											.input-group.clockpicker(data-placement='top', data-align='top', data-autoclose='true')
												input.form-control(type='text', ng-model="apptReq.time")
												span.input-group-addon
													span.glyphicon.glyphicon-time
									.form-group
										.col-sm-12.input-group
											label.control-label Doctor
											input.form-control(type='text', ng-model="apptReq.doctor")
									.form-group
										.col-sm-12.input-group
											label.control-label Reason For Appointment
											textarea.form-control(rows='3', ng-model="apptReq.reasonForAppt")
									button(class="btn btn-440w pull-right", ng-click="reqAppt($event)") Request New Appointment

					#medicines.tab-pane.fade
					#allergies.tab-pane.fade
					#reports.tab-pane.fade
					#results.tab-pane.fade
